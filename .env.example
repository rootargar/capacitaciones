# Configuración de Email para Notificaciones
# Copiar este archivo como .env y configurar con los valores reales

# Servidor SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USERNAME=tu-correo@ejemplo.com
SMTP_PASSWORD=tu-password-aqui

# Configuración del remitente
SMTP_FROM_EMAIL=capacitaciones@ejemplo.com
SMTP_FROM_NAME=Sistema de Capacitaciones KWDAF

# Activar/Desactivar emails
EMAIL_ENABLED=true
EMAIL_DEBUG=false

# Tiempo de recordatorio (en horas)
EMAIL_REMINDER_HOURS=24
